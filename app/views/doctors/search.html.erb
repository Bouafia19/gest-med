

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Recherche Avancée</h1>

<br>
<div class="col-xl-12 col-md-6 mb-4 res">
  <!-- Collapsable Card Example -->
  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
      <h6 class="m-0 font-weight-bold text-primary">Chercher Médecins</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse show" id="collapseCardExample">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col-xl-12 col-md-6 mb-4 res">

            <%= form_tag doctors_search_path , method: :get do %>
              <div class="row">

                <div class="col-xl-4 col-md-6 mb-4 align-self-start"  >
                  <%#= label_tag 'Wilayas' , nil ,class: 'mr-sm-2' %>
                  <%#= select_tag :city ,options_for_select([["Setif","setif"],["Alger","alger"],["Oran","oran"]] ),{prompt: "Select Wilaya",class:"form-control "}%>
                  <%= select_tag :city, options_for_select(CS.states(:dz).map { |c| [c[1], c[0]] } ),{prompt: "Select Wilaya",class:"form-control "} %>
                </div>
                
                <div class="col-xl-4 col-md-6 mb-4 align-self-center">
                  <%#= label_tag :Spécialité, nil ,class: 'mr-sm-2'%>
                  <%#= select_tag :specialist, options_for_select(Doctor.all.map{|u| [u.specialist ] }.uniq),{prompt: "Spécialité",class:"form-control form-control"} %>
                  <%= select_tag :specialist,options_for_select([["Allergologie","Allergologie"],["Biologie bactériologie","Biologie bactériologie"],
    ["Biologie Biochimie","Biologie Biochimie"],["Biologie chimie ","Biologie chimie "],["Biologie virologie","Biologie virologie"],["Cardiologie","Cardiologie"],
    ["Chirurgie dentaire","Chirurgie dentaire"],["Chirurgie esthétique ","Chirurgie esthétique "],["Chirurgie infantile","Chirurgie infantile"],["Chirurgie maxillo-faciale","Chirurgie maxillo-faciale"],
    ["Chirurgie Orthopédie","Chirurgie Orthopédie"],["Chirurgie générale ","Chirurgie générale "],["Dermatologie","Dermatologie"],["Diabétologie","Diabétologie"],
    ["Endocrinologie","Endocrinologie"],["Epidémiologie","Epidémiologie"],["Gastrologie","Gastrologie"],["Gynécologie obstétrique","Gynécologie obstétrique"],
    ["Hématologie","Hématologie"],["Immunologie","Immunologie"],["Maladies Infectieuses","Maladies Infectieuses"],["Médecine de sport","Médecine de sport"],
    ["Médecine de travail","Médecine de travail"],["Médecine interne","Médecine interne"],["Médecine légale","Médecine légale"],["Néphrologie","Néphrologie"],
    ["Neurochirurgie","Neurochirurgie"],["Neurologie","Neurologie"],["O.R.L","O.R.L"],["Oncologie","Oncologie"],
    ["Ophtalmologie","Ophtalmologie"],["Pédiatrie","Pédiatrie"],["Pneumo-phtisiologie","Pneumo-phtisiologie"],["Psychologie","Psychologie"],
    ["Radiologie","Radiologie"],["Rééducation fonctionnelle","Rééducation fonctionnelle"],["Rhumatologie","Rhumatologie"],["Sénologie","Sénologie"],
    ["Urologie","Urologie"]
    ]),{prompt: "Spécialité",class:"form-control form-control"} %>
                </div>
                
                <div class="col-xl-4 col-md-6 mb-4 align-self-end">
                  <%= submit_tag "Chercher Médecins ",class:"btn btn-primary" %>
                </div>
                
            <% end %>
           </div>
          </div>
        </div>
        


        
      </div>
    </div>
  </div>

  <div class="row" id="table_search" style="padding: 10px">

  <% @doctos.each do |doc| %>
<div class="col-xl-4 col-md-6 mb-4">
    <div class="card text-center border-info shadow h-100 py-2">
      <div class="card border-info shadow h-100 py-2">
      <div class="card-header">
        <strong style="color: #17a2b8" align="center">Dr. <%= doc.name %></strong>
      </div>

          <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                  <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Wilaya</div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800"><%= doc.city %></div>
                  <hr>
                  <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">specialist</div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800"><%= doc.specialist %></div>
                  <hr>
                </div>
            </div>
        <br>
        <%= link_to 'Voir', doc ,class:"btn btn-info"%>
      </div>
            </div>
</div>
    </div>
  <% end %>

