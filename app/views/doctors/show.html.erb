    ["Radiologie","Radiologie"],["Rééducation fonctionnelle","Rééducation fonctionnelle"],["Rhumatologie","Rhumatologie"],["Sénologie","Sénologie"],
    ["Urologie","Urologie"]] %></span>
                  </a>

<div class="my-2"></div>
                  <a href="#" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                      <i>Sous Spécialité</i>
                    </span>
                    <span class="text"><%= @doctor.sous_spesialist %></span>
                  </a>

<div class="my-2"></div>
                  <a href="#" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                      <i>Numero d'ordre</i>
                    </span>
                    <span class="text"><%= @doctor.num_ordre %></span>
                  </a>

<div class="my-2"></div>
                  <a href="#" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                      <i>Address</i>
                    </span>
                    <span class="text"><%= best_in_place @doctor, :address,:as => :textarea %></span>
                  </a>

<div class="my-2"></div>
                  <a href="#" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                      <i>Wilaya</i>
                    </span>
                    <span class="text"><%= @doctor.city %></span>
                  </a>

<div class="my-2"></div>
                  <a href="#" class="btn btn-info btn-icon-split">
                    <span class="icon text-white-50">
                      <i>Pays</i>
                    </span>
                    <span class="text"><%= @doctor.country %></span>
                  </a>
</div>

         <div class="col">
             <%= image_tag @doctor.avatar.url(:medium),height: '100%', width: '100%',class: "img-thumbnail" %>
         </div>
</div>
</div>
</div>


<!-- Collapsable Card Example -->
                  <div class="card shadow mb-4">
