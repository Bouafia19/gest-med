<div class="card">

    <div class="card-body">
    <div class="card-header">
     <h1 style="color: #17a2b8" align="center">Le médecin <br> <%= @doctor.name%> </h1>
     </div>
      <br>
<%= link_to '', edit_doctor_path(@doctor),class:"fas fa-tv fa-2x  btn-primary btn-lg" %> 
