<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">Patients</h6>
  </div>
  <div class="card-body">

    <table class="table table-bordered table-responsive" id="dataTable" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of birth</th>
      <th>Sex</th>
      <th>Address</th>
      <th>City</th>
      <th>Country</th>
      <th>Document data</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.date_of_birth %></td>
        <td><%= patient.sex %></td>
        <td><%= patient.address %></td>
        <td><%= patient.city %></td>
        <td><%= patient.country %></td>
        <td><%= patient.document_data %></td>
        <td><%= link_to '', patient ,class:"fas fa-tv fa-2x  btn-success btn-lg"%></td>
        <td><%= link_to '', edit_patient_path(patient),class:"fas fa-edit fa-2x btn-primary btn-lg" %></td>
        <td><%= link_to '', patient, method: :delete, data: { confirm: 'Are you sure?' } ,class:"fas fa-trash fa-2x btn-danger btn-lg" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>