

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Recherche Avanc√©e</h1>

<br>
<div class="col-xl-12 col-md-6 mb-4 res">
  <!-- Collapsable Card Example -->
  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
      <h6 class="m-0 font-weight-bold text-primary">Chercher Patients</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse show" id="collapseCardExample">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col-xl-12 col-md-6 mb-4 res">

            <%= form_tag patients_search_path, method: :get do %>
              <div class="row">

                <div class="col-xl-4 col-md-6 mb-4 align-self-start"  >
                  <%#= label_tag 'Wilayas' , nil ,class: 'mr-sm-2' %>
                  <%= select_tag :city ,options_for_select([["Setif","setif"],["Alger","alger"],["Oran","oran"]] ),{prompt: "Select Wilaya",class:"form-control form-control"}%>
                </div>

                <div class="col-xl-4 col-md-6 mb-4 align-self-center">
                  <%#= label_tag 'Sexe' , nil ,class: 'mr-sm-2' %>
                  <%= select_tag :sex, options_for_select(Patient.all.map{|u| [u.sex ] }.uniq),{prompt: "sex",class:"form-control form-control"} %>
                </div>

                
        
                <div class="col-xl-4 col-md-6 mb-4 align-self-end">
                  <%= submit_tag "Chercher Patients ",class:"btn btn-md btn-info" %>
                </div>
            <% end %>
            </div>
          </div>
        </div>
       


        
      </div>
    </div>
  </div>

  <div class="row" id="table_search" style="padding: 10px">
     
  <% @patien.each do |pat| %>
   <div class="col-xl-4 col-md-6 mb-4">
    <div class="card text-center border-info shadow h-100 py-2">
      <div class="card border-info shadow h-100 py-2">
      <div class="card-header">
        <strong style="color: #17a2b8" align="center">Patient: <%= pat.name %></strong>
      </div>

          <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                  <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Wilaya</div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800"><%= pat.city %></div>
                  <hr>
                  <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Sexe</div>
                  <div class="h5 mb-0 font-weight-bold text-gray-800"><%= pat.sex %></div>
                  <hr>
                </div>
            </div>

        <br>
        <%= link_to 'Voir', pat ,class:"btn btn-info"%>
      </div>
            </div>
</div>
    </div>
  <% end %>

  <br>