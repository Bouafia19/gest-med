<div class="container-fluid">

  <!-- Page Heading -->
  <h1 class="h3 mb-2 text-gray-800">Recherche Avanc√©e</h1>
  <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>


<div class="col-xl-12 col-md-6 mb-4 res">
  <!-- Collapsable Card Example -->
  <div class="card shadow mb-4">
    <!-- Card Header - Accordion -->
    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
      <h6 class="m-0 font-weight-bold text-primary">Chercher Patients</h6>
    </a>
    <!-- Card Content - Collapse -->
    <div class="collapse show" id="collapseCardExample">
      <div class="card-body">
        <div class="row no-gutters align-items-center">
          <div class="col mr-2">

            <%= form_tag patients_search_path, method: :get do %>
              <div class="row">

                <div class="col-sm-2 align-self-start"  >
                  <%= select_tag :city ,options_for_select([["Setif","setif"],["Alger","alger"],["Oran","oran"]] ),{prompt: "Select Wilaya",class:"form-control", required: true}%>
                </div>

                <div class="col-sm-2 align-self-center">
                  <%= select_tag :sex, options_for_select(Patient.all.map{|u| [u.sex ] }.uniq),{prompt: "sex",class:"form-control", required: true} %>
                </div>

                
        
                <div class="col-sm-2 align-self-end">
                  <%= submit_tag "Chercher Patients ",class:"btn btn-md btn-success" %>
                </div>
            <% end %>
            </div>
          </div>
        </div>
        <hr>


        
      </div>
    </div>
  </div>

  <div class="row" id="table_search" style="padding: 10px">

  <% @patien.each do |pat| %>

    <div class="card text-center border-info shadow h-100 py-2 col-6">
      <div class="card border-info shadow h-100 py-2">
      <div class="card-header bg-info">
        <strong>Patient name: <%= pat.name %></strong>
      </div>

          <div class="card-body">

        <ul class="list-group list-group-flush">
          <li class="list-group-item">city: <%= pat.city %></li>
          <li class="list-group-item">sex: <%= pat.sex %></li>
          

        </ul>
        <br>
        <%= link_to 'Fiche Technique', pat ,class:"btn btn-success col-4"%>
      </div>
            </div>

    </div>
  <% end %>

  <br></div>