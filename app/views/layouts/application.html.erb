<div class="container-fluid">
    <% if notice %>
      <div class="col-md-12 alert alert-info">
        <p id="notice"><%= notice %></p>
      </div>
    <%end%>

    <% if alert %>  
      <div class="col-md-12 alert alert-danger">
        <p id="alert"><%= alert %></p>
      </div>   
    <%end%>

</div>
<div class="container-fluid" >
    <%= yield  %> 
</div>
  
  <!-- End of Content Wrapper -->

</div>
