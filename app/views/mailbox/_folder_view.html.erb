<div class="card">
  <div class="card-body">
    <div class="card-header">
      <h1 style="color: #17a2b8" align="center">Messagerie</h1>
    </div>
    <hr>
<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12">
    <!-- we'll configure this to compose new conversations later -->
    <%#= link_to "Composer", new_conversation_path , class: "btn btn-success" %>

    <div class="spacer"></div>
  </div>

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="card">
      <div class="card-body">
        <% if is_conversation %>
          <%= render 'conversations/form' %>
        <% else %>
          <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
        <!-- individual conversations will show here -->
      </div>
    </div>
  </div>

</div>
  </div>
</div>