<div class="card ">
  <div class="card-body ">
    <div class="card-header ">
        <h1 style="color: #17a2b8" align="center">Nouveau Utilisateur</h1>
    </div>
    
       <br>
        <%= link_to '', users_path ,class:"fas fa-arrow-left fa-2x  btn-warning btn-lg" %>
        <hr>



        <%= form_for(@user, html: {class: "user"}) do |f| %>

          <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user.errors.count, "error") %> prohibited this provider from being saved:</h2>

              <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <br>
          <div class="form-group" align="center">
            <%= f.label :Nom_et_Prenom %>
            <%= f.text_field :name, id: :user_name ,class:"form-control form-control-lg col-4"%>
          </div>
          
          <div class="form-group" align="center">
            <%= f.label :Email %>
            <%= f.text_field :email, id: :user_email ,class:"form-control form-control-lg col-4"%>
          </div>
          
          <div class="form-group" align="center">
            <%= f.label :Mot_de_passe %>
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control form-control-user col-4" %>
          </div>

          <div class="form-group" align="center">
            <%= f.label :Date_de_naissance %>
            <%= f.date_field :date_of_birth ,class:"form-control form-control-lg col-4"%>
          </div>

            <div class="form-group" align="center">
              <%= f.label :Adress %>
              <%= f.text_area :adress ,class:"form-control form-control-lg col-4"%>
            </div>

            <div class="form-group" align="center">
              <%= f.label :Pays %>
              <%= f.text_field :country ,class:"form-control form-control-lg col-4" %>
            </div>

            <div class="form-group" align="center">
              <%= f.label :Wilayas %>
              <%= f.select :cite, options_for_select(CS.states(:dz).map { |c| [c[1], c[0]] } ),{},class:"form-control form-control-lg col-4" %>
            </div>

            

          <div class="form-group" align="center">
            <%= f.label :Role %>
            <%= f.select :role, options_for_select([["Admin","admin"],["Docteur","docteur"],["Patient","patient"]]),{},class:"form-control form-control-lg col-4"%>
          </div>

          <div class="form-group" align="center">
            <%= f.label :Photo_de_profile  %>
            <%= f.file_field :avatar ,class:"form-control form-control-lg col-4"%>
          </div>
          
          <hr>
          <div class="form-group" align="center">
            <%= f.submit "Sauvegarder L'utilisateur" ,class:"btn btn-success btn-user btn-block col-4" %>
          </div>
          

        <% end %>
       
      </div>
    </div>
 